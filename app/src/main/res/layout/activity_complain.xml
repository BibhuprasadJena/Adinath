<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/child_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cid"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/complian_edittext_back"
                    android:hint="Customer ID"
                    android:paddingLeft="10dp" />

                <EditText
                    android:id="@+id/bill_no"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="3"
                    android:background="@drawable/complian_edittext_back"
                    android:hint="Bill No"
                    android:paddingLeft="10dp" />

                <Button
                    android:id="@+id/product_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:background="#FF8000"
                    android:text="Search"
                    android:textColor="#ffffff" />

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Customer Details"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ABAAAF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/locattion_margin_right"
                android:layout_marginTop="7dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/phone_image_width"
                    android:layout_height="@dimen/phone_image_height"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/phone_image_margin_right"
                    android:padding="@dimen/padding"
                    android:src="@drawable/customer_name" />

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="jmes Rai disoja"
                    android:textColor="#858686"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginRight="@dimen/locattion_margin_right"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/phone_image_width"
                    android:layout_height="@dimen/phone_image_height"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/phone_image_margin_right"
                    android:padding="@dimen/padding"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Idco Tower , Mancheswar Instratila Istate Tower PIN : 752002"
                    android:textColor="#858686"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mobile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/locattion_margin_right"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/phone_image_width"
                    android:layout_height="@dimen/phone_image_height"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/phone_image_margin_right"
                    android:padding="@dimen/padding"
                    android:src="@drawable/mobile" />

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+91 7205181047"
                    android:textColor="#858686"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/locattion_margin_right"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/phone_image_width"
                    android:layout_height="@dimen/phone_image_height"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/phone_image_margin_right"
                    android:padding="@dimen/padding"
                    android:src="@drawable/new_email" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="this@gmail.com"
                    android:textColor="#858686"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Product Details"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ABAAAF" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:layout_marginTop="15dp">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/issue"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/complian_edittext_back"
                android:hint="Enter Your Issue Details...."
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" />

            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="#E81E27"
                android:text="Submit"
                android:textColor="#ffffff" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>


